<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>Butler.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Addpost</servlet-name>
        <servlet-class>Butler.Addpost</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Maintenance</servlet-name>
        <servlet-class>Butler.Maintenance</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Markdone</servlet-name>
        <servlet-class>Butler.Markdone</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateAdmin</servlet-name>
        <servlet-class>Butler.CreateAdmin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SubmitMessage</servlet-name>
        <servlet-class>Butler.SubmitMessage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteMessage</servlet-name>
        <servlet-class>Butler.DeleteMessage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Approve</servlet-name>
        <servlet-class>Butler.Approve</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateProfile</servlet-name>
        <servlet-class>Butler.UpdateProfile</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Addpost</servlet-name>
        <url-pattern>/Addpost</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Maintenance</servlet-name>
        <url-pattern>/Maintenance</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Markdone</servlet-name>
        <url-pattern>/Markdone</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateAdmin</servlet-name>
        <url-pattern>/CreateAdmin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubmitMessage</servlet-name>
        <url-pattern>/SubmitMessage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteMessage</servlet-name>
        <url-pattern>/DeleteMessage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Approve</servlet-name>
        <url-pattern>/Approve</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateProfile</servlet-name>
        <url-pattern>/UpdateProfile</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <jsp-config>
        <jsp-property-group>
            <description>header and footer</description>
            <url-pattern>/WEB-INF/view/*</url-pattern>
            <url-pattern>/main.jsp</url-pattern>
            <scripting-invalid>false</scripting-invalid>
            <include-prelude>/WEB-INF/jspf/header.jspf</include-prelude>
            <include-coda>/WEB-INF/jspf/footer.jspf</include-coda>
        </jsp-property-group>
    </jsp-config>
</web-app>
